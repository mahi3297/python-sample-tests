pipeline {
    agent any
    environment {
        VENV = ".venv"
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Setup Python') {
            steps {
                sh '''
                python3 -m venv $VENV
                . $VENV/bin/activate
                pip install --upgrade pip
                pip install -r requirements.txt
                '''
            }
        }
        stage('Lint') {
            steps {
                sh '''
                . $VENV/bin/activate
                flake8 .
                '''
            }
        }
        stage('Test') {
            steps {
                sh '''
                . $VENV/bin/activate
                pytest
                '''
            }
        }
        stage('Build (Optional)') {
            steps {
                echo "Build step (optional for Python)"
            }
        }
        stage('Deploy (Optional)') {
            when {
                branch 'main'
            }
            steps {
                echo "Deploy step goes here"
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}

