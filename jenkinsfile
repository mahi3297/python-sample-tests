pipeline {
  agent any

  triggers {
    githubPush()          // Needs GitHub plugin + webhook [web:200]
  }

  stages {
    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/mahi3297/python-sample-tests.git'
      }
    }

    stage('Build & Test') {
      steps {
        sh 'python3 -m venv venv && . venv/bin/activate && pip install -r requirements.txt'
        sh '. venv/bin/activate && pytest -q'
      }
    }

    stage('Deploy to Dev') {
      when {
        branch 'main'
      }
      steps {
        sh 'echo "Deploying to dev server..."'
      }
    }
  }
}

